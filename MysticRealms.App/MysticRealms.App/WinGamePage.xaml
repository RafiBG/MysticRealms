<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MysticRealms.App.WinGamePage"
             BackgroundImageSource="background_image.png"
             Title="You win">
    <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
        <Label x:Name="WinMessage" Text="You win" FontSize="32" TextColor="White" HorizontalOptions="Center" />
        <Label x:Name="UserScore" Text="User score" FontSize="18" TextColor="White" HorizontalOptions="Center" />
        <Label x:Name="UserCoins" Text="User Coins" FontSize="18" TextColor="White" HorizontalOptions="Center" />
        <Button Text="Continue" BackgroundColor="#a25f4c" TextColor="White" FontSize="18" Clicked="btnContinue" WidthRequest="200" />
        <Button Text="Exit to Menu" BackgroundColor="#a25f4c" TextColor="White" FontSize="18" Clicked="btnExitMenu" WidthRequest="200" />
    </VerticalStackLayout>
</ContentPage>