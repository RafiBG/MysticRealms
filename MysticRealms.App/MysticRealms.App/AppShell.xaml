<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MysticRealms.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MysticRealms.App"
    Shell.FlyoutBehavior="Flyout"
    Title="MysticRealms.App"
    Shell.NavBarIsVisible="False"
    FlyoutBackgroundColor="#333333">

    <Shell.FlyoutHeader>
        <StackLayout>
            <Label Text="Game menu" FontSize="20" HorizontalOptions="Center"></Label>
        </StackLayout>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Home">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}"></ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Register">
        <ShellContent ContentTemplate="{DataTemplate local:RegisterPage}"></ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Login">
        <ShellContent  ContentTemplate="{DataTemplate local:LoginPage}"></ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="Select hero">
        <ShellContent ContentTemplate="{DataTemplate local:SelectHeroGamePage}"></ShellContent>
    </FlyoutItem>

    <FlyoutItem Title="UserStats">
        <ShellContent ContentTemplate="{DataTemplate local:ShowUserStatsPage}"></ShellContent>
    </FlyoutItem>

</Shell>
