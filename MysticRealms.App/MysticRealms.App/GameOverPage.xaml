<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MysticRealms.App.GameOverPage"
             BackgroundImageSource="background_image.png"
             Title="Game Over">
    
    <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
        <Label x:Name="GameOverMessage" Text="Game Over" FontSize="32" TextColor="White" HorizontalOptions="Center" />
        <Button Text="Play Again" BackgroundColor="#a25f4c" TextColor="White" FontSize="18" Clicked="btnPlayAgain" WidthRequest="200" />
        <Button Text="Exit to Menu" BackgroundColor="#a25f4c" TextColor="White" FontSize="18" Clicked="btnExitToMenu" WidthRequest="200" />
    </VerticalStackLayout>
</ContentPage>