<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundImageSource="background_image.png"
             x:Class="MysticRealms.App.RegisterPage"
             Title="">
    
    <StackLayout Padding="30" Spacing="20">
        <Label Text="Register" FontSize="34" HorizontalOptions="Center" TextColor="#d3ada2" />
        <Entry x:Name="UsernameEntry" Placeholder="Username" WidthRequest="300" />
        <Entry x:Name="EmailEntry" Placeholder="Email" WidthRequest="300" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" WidthRequest="300" />
        <Button Text="Register" Clicked="btnRegister" BackgroundColor="#a25f4c" TextColor="White" WidthRequest="300" FontSize="18" />
    </StackLayout>
</ContentPage>

